# 環境設定
NODE_ENV=development
PORT=5000

# 資料庫設定
MONGODB_URI=mongodb://localhost:27017/pet-finder

# JWT 設定
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS 設定
CORS_ORIGIN=http://localhost:3000

# Session 設定
SESSION_SECRET=your-super-secret-session-key-here

# Google OAuth 設定
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/oauth/google/callback

# Google Vision AI 設定
GOOGLE_VISION_PROJECT_ID=your-google-cloud-project-id
GOOGLE_VISION_KEY_PATH=path/to/your/service-account-key.json

# AWS S3 設定
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary 設定 (可選，如果不使用 S3)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# 電子郵件設定
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# 客戶端 URL
CLIENT_URL=http://localhost:3000

# 速率限制設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日誌設定
LOG_LEVEL=info

# 文件上傳設定
MAX_FILE_SIZE=5242880
MAX_FILES_PER_REQUEST=5

# 分頁設定
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 緩存設定
CACHE_TTL=3600