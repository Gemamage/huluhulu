# 環境設定
NODE_ENV=development

# 伺服器設定
PORT=3001

# 資料庫設定
# 開發環境使用 MongoDB Atlas 或本地 MongoDB
MONGODB_URI=mongodb://localhost:27017/pet-finder-dev
# 生產環境範例: mongodb+srv://username:password@cluster.mongodb.net/pet-finder

# JWT 設定
# 請使用強密碼，至少 32 個字元
JWT_SECRET=your-super-secret-jwt-key-here-at-least-32-characters
JWT_EXPIRES_IN=7d

# CORS 設定
# 開發環境
CORS_ORIGIN=http://localhost:3000
# 生產環境範例: https://pet-finder.com,https://www.pet-finder.com

# Cloudinary 設定 (圖片上傳服務)
# 請到 https://cloudinary.com 註冊並取得 API 金鑰
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# 郵件服務設定
# Gmail 範例設定
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
# 請使用應用程式密碼，不是一般密碼
EMAIL_PASS=your-app-password

# 速率限制設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日誌設定
LOG_LEVEL=info

# 前端環境變數 (Next.js)
# API 基礎 URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Google Maps API (如果需要地圖功能)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Firebase 設定 (如果需要推播通知)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# 分析工具 (可選)
NEXT_PUBLIC_GA_TRACKING_ID=your-google-analytics-id
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# 社群媒體分享 (可選)
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# 開發工具設定
# Storybook
STORYBOOK_PORT=6006

# 測試環境設定
TEST_MONGODB_URI=mongodb://localhost:27017/pet-finder-test
TEST_JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only

# Docker 設定 (可選)
DOCKER_REGISTRY=your-docker-registry
DOCKER_IMAGE_TAG=latest

# AWS 設定 (生產環境)
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# Vercel 設定 (前端部署)
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# 監控和錯誤追蹤 (可選)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# 快取設定 (Redis，可選)
REDIS_URL=redis://localhost:6379

# 搜尋引擎 (Elasticsearch，可選)
ELASTICSEARCH_URL=http://localhost:9200

# 第三方服務 API 金鑰
# LINE Notify (可選)
LINE_NOTIFY_TOKEN=your-line-notify-token

# Slack Webhook (可選)
SLACK_WEBHOOK_URL=your-slack-webhook-url

# 支付服務 (未來功能，可選)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# 簡訊服務 (可選)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number